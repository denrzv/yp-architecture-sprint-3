@startuml
title Диаграмма контекста для Smart Home Company

top to bottom direction

!includeurl https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

SHOW_PERSON_OUTLINE()

Boundary(home, "Дом пользователя", "удалённый объект") {
    Person_Ext(user, "Пользователь", "Управляет температурой удалённо")
    System_Ext(modules, "API модуля", "Получения данных и управление температурой")
}

Enterprise_Boundary(company, "Smart Home Company") {
    System(SmartHomeSystem, "Smart Home System", "Управляет температурными модулями, пользователями")
    Person(admin, "Администратор", "Управляет системой")
}

System_Ext(payment, "Платёжный провайдер", "Обработка платежей")

Rel(user, SmartHomeSystem, "Использует систему")
Rel(admin, SmartHomeSystem, "Управляет системой")
Rel(SmartHomeSystem, modules, "Получает данные управляет температурой", sync)
Rel(SmartHomeSystem, payment, "Обработка платежей за сервис", sync)

SHOW_LEGEND()

@enduml